{
  "name": "ts-node-base",
  "version": "0.0.0",
  "description": "Project setup by robb-j/ts-node-base",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc --reporter=html npm test -s",
    "lint": "npx tslint -p .",
    "preversion": "npm run lint -s && npm test -s && tsc && git add -A dist",
    "start": "node -r tsconfig-paths/register dist",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'spec/**/*.ts'",
    "dev": "nodemon -w src -e ts -x ts-node -q src/index.ts"
  },
  "author": "robb-j",
  "license": "ISC",
  "dependencies": {
    "tsconfig-paths": "^3.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2"
  }
}
