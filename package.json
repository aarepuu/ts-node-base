{
  "name": "@robb_j/create-ts-node",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "src/index.js",
  "types": "dist/index.d.ts",
  "repository": "robb-j/ts-node-base",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build && git add dist",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,css,md}'",
    "start": "node -r dotenv/config dist/index.js",
    "test": "jest",
    "dev": "NODE_ENV=development nodemon -w src -e ts -x 'npx ts-node -r dotenv/config' src/index.ts"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "dotenv": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
