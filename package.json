{
  "name": "ts-node-base",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build && git add dist",
    "prettier": "prettier --write ./**/*.{js,ts,tsx,json,css,md}",
    "start": "node -r dotenv/config dist",
    "test": "jest",
    "watch": "nodemon -w src -e ts -x 'ts-node -r dotenv/config' -q src/index.ts"
  },
  "author": "Rob Anderson (https://r0b.io)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
