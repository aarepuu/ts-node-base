{
  "name": "ts-node-base",
  "version": "0.0.0",
  "private": false,
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc --reporter=html npm test -s",
    "preversion": "npm test -s && tsc && git add dist",
    "prettier": "prettier --write ./**/*.{js,ts,tsx,json,css,md}",
    "start": "node -r dotenv/config dist",
    "test": "mocha -r ts-node/register 'src/**/*.spec.ts'",
    "watch": "nodemon -w src -e ts -x 'ts-node -r dotenv/config' -q src/index.ts"
  },
  "author": "Rob Anderson (https://r0b.io)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "chai": "^4.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "nyc": "^13.1.0",
    "prettier": "1.15.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
