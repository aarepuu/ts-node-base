{
  "name": "ts-node-base",
  "version": "0.0.0",
  "description": "Project setup by robb-j/ts-node-base",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc --reporter=html npm test -s",
    "lint": "npx tslint -p .",
    "preversion": "npm run lint -s && npm test -s && tsc && git add -A dist",
    "start": "node -r tsconfig-paths/register dist",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'spec/**/*.ts'",
    "dev": "nodemon -w src -e ts -x ts-node -q src/index.ts"
  },
  "author": "robb-j",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "tsconfig-paths": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.1",
    "chai": "^4.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.4"
  }
}
